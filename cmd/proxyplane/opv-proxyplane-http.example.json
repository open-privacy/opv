{
  "version": 2,
  "name": "OPV Proxy Plane",
  "port": 28001,
  "debug": false,
  "cache_ttl": 3600,
  "timeout": "3s",
  "endpoints": [
    {
      "endpoint": "/tokenize",
      "method": "POST",
      "backend": [
        {
          "host": [
            "https://httpbin.org"
          ],
          "url_pattern": "/post",
          "extra_config": {
            "github.com/open-privacy/opv": {
              "opv.body.Modifier": {
                "scope": [
                  "request"
                ],
                "items": [
                  {
                    "json_pointer_path": "/user/ssn",
                    "fact_type_slug": "ssn",
                    "action": "tokenize"
                  }
                ]
              }
            }
          }
        }
      ]
    },
    {
      "endpoint": "/detokenize",
      "method": "POST",
      "backend": [
        {
          "host": [
            "https://httpbin.org"
          ],
          "url_pattern": "/post",
          "extra_config": {
            "github.com/open-privacy/opv": {
              "opv.body.Modifier": {
                "scope": [
                  "request"
                ],
                "items": [
                  {
                    "json_pointer_path": "/user/ssn",
                    "fact_type_slug": "ssn",
                    "action": "detokenize"
                  }
                ]
              }
            }
          }
        }
      ]
    }
  ]
}