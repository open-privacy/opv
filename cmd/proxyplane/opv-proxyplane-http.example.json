{
  "version": 3,
  "name": "OPV Proxy Plane",
  "debug": true,
  "cache_ttl": 3600,
  "timeout": "3s",
  "endpoints": [
    {
      "endpoint": "/tokenize",
      "headers_to_pass": [
        "*"
      ],
      "output_encoding": "no-op",
      "method": "POST",
      "backend": [
        {
          "host": [
            "https://httpbin.org"
          ],
          "url_pattern": "/post",
          "encoding": "no-op",
          "extra_config": {
            "open-privacy": {
              "opv.body.Modifier": {
                "scope": [
                  "request"
                ],
                "items": [
                  {
                    "json_pointer_path": "/first_name",
                    "fact_type_slug": "ascii",
                    "action": "tokenize"
                  }
                ]
              }
            }
          }
        }
      ]
    }
  ]
}