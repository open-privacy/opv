{
  "version": 2,
  "name": "OPV Proxy Plane",
  "debug": true,
  "cache_ttl": 360,
  "timeout": "20s",
  "extra_config": {
    "github.com/devopsfaith/krakend-gologging": {
      "level": "WARNING",
      "prefix": "[OPV Proxy Plane]",
      "syslog": false,
      "stdout": true,
      "format": "default"
    },
    "github.com/devopsfaith/krakend/http": {
      "return_error_details": true
    }
  },
  "endpoints": [
    {
      "endpoint": "/tokenize",
      "headers_to_pass": [
        "*"
      ],
      "output_encoding": "no-op",
      "method": "POST",
      "backend": [
        {
          "host": [
            "http://localhost"
          ],
          "url_pattern": "/post",
          "encoding": "no-op",
          "extra_config": {
            
            "github.com/open-privacy/opv": {
              "opv.body.Modifier": {
                "scope": [
                  "request"
                ],
                "items": [
                  {
                    "json_pointer_path": "/name_first",
                    "array_pointer_path": "/data", 
                    "fact_type_slug": "ascii",
                    "action": "tokenize"
                  },
                  {
                    "json_pointer_path": "/name_last",
                    "array_pointer_path": "/data", 
                    "fact_type_slug": "ascii",
                    "action": "tokenize"
                  },
                  {
                    "json_pointer_path": "/email",
                    "array_pointer_path": "/data", 
                    "fact_type_slug": "email",
                    "action": "tokenize"
                  },
                  {
                    "json_pointer_path": "/mobile",
                    "array_pointer_path": "/data", 
                    "fact_type_slug": "phonenumber",
                    "action": "tokenize"
                  },
                  {
                    "json_pointer_path": "/address",
                    "array_pointer_path": "/data", 
                    "fact_type_slug": "ascii",
                    "action": "tokenize"
                  },
                  {
                    "json_pointer_path": "/city",
                    "array_pointer_path": "/data", 
                    "fact_type_slug": "ascii",
                    "action": "tokenize"
                  },
                  {
                    "json_pointer_path": "/country",
                    "array_pointer_path": "/data", 
                    "fact_type_slug": "ascii",
                    "action": "tokenize"
                  },
                  {
                    "json_pointer_path": "/state",
                    "array_pointer_path": "/data", 
                    "fact_type_slug": "ascii",
                    "action": "tokenize"
                  }
                ]
              }
            }
          }
        }
      ]
    },
    {
      "endpoint": "/detokenize",
      "headers_to_pass": [
        "*"
      ],
      "output_encoding": "no-op",
      "method": "POST",
      "backend": [
        {
          "host": [
            "http://localhost"
          ],
          "url_pattern": "/post",
          "encoding": "no-op",
          "extra_config": {
            "github.com/open-privacy/opv": {
              "opv.body.Modifier": {
                "scope": [
                  "request"
                ],
                "items": [
                  {
                    "json_pointer_path": "/name_first",
                    "array_pointer_path": "/data", 
                    "fact_type_slug": "ascii",
                    "action": "detokenize"
                  },
                  {
                    "json_pointer_path": "/name_last",
                    "array_pointer_path": "/data", 
                    "fact_type_slug": "ascii",
                    "action": "detokenize"
                  },
                  {
                    "json_pointer_path": "/email",
                    "array_pointer_path": "/data", 
                    "fact_type_slug": "email",
                    "action": "detokenize"
                  },
                  {
                    "json_pointer_path": "/mobile",
                    "array_pointer_path": "/data", 
                    "fact_type_slug": "phonenumber",
                    "action": "detokenize"
                  },
                  {
                    "json_pointer_path": "/address",
                    "array_pointer_path": "/data", 
                    "fact_type_slug": "ascii",
                    "action": "detokenize"
                  },
                  {
                    "json_pointer_path": "/city",
                    "array_pointer_path": "/data", 
                    "fact_type_slug": "ascii",
                    "action": "detokenize"
                  },
                  {
                    "json_pointer_path": "/country",
                    "array_pointer_path": "/data", 
                    "fact_type_slug": "ascii",
                    "action": "detokenize"
                  },
                  {
                    "json_pointer_path": "/state",
                    "array_pointer_path": "/data", 
                    "fact_type_slug": "ascii",
                    "action": "detokenize"
                  }
                ]
              }
            }
          }
        }
      ]
    }
  ]
}
